@model dynamic

@{
    ViewBag.Title = "New Rental form";
}

<h2>New Rental form</h2>

<form id="newRentalForm">
    <div class="form-group">
        <label>Customer</label>
        <div class="tt-container">
            <input id="customer" type="text" value="" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label>Movie</label>
        <div class="tt-container">
            <input id="movie" type="text" value="" class="form-control"/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-lg-4 col-xs-4">
            <ul id="moviesRented" class="list-group">
            </ul>
        </div>
    </div>

    <button class="btn btn-primary">Submit</button>
</form>

@section scripts
{
    <script>
        var customerViewModel = {
            movieIds: []
        };
        $(document).ready(function() {

            var customers = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/api/customers?query=%QUERY',
                    wildcard: '%QUERY'
                }
            });

            $('#customer').typeahead({
                    minLength: 3,
                    highlight: true
                },
                {
                    name: 'customers',
                    display: 'name',
                    source: customers
                }).on("typeahead:select",
                function(e, customer) {
                    customerViewModel.customerId = customer.id;
                });;

            var movies = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/api/movies?query=%QUERY',
                    wildcard: '%QUERY'
                }
            });

            $('#movie').typeahead({
                    minLength: 3,
                    highlight: true
                },
                {
                    name: 'movies',
                    display: 'name',
                    source: movies
                }).on('typeahead:select',
                function(e, movie) {
                    $('#moviesRented').append("<li class='list-group-item'>" + movie.name + "</li>");
                    $('#moviesRented').typeahead('val', '');

                    customerViewModel.movieIds.push(movie.id);
                });

            $("#newRentalForm").submit(function(e) {
                e.preventDefault();

                $.ajax({
                        url: "/api/newRentals",
                        method: "post",
                        data: customerViewModel
                    })
                    .done(function() {
                        toastr.success("Rental successfully recorded");
                    })
                    .fail(function() {
                        toastr.error("Something unexpected happen");
                    });
            });
        });


    </script>
}