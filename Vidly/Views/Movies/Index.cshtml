@model Vidly.ViewModels.MoviesViewModel

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<p>
    @Html.ActionLink("New Movie", "New", "Movies", null, new { @class = "btn btn-primary" })
</p>

@if (!Model.Movies.Any())
{
    <p>There is no movie</p>
}
else
{
    <table class="table">
        <thead>
        <th>#</th>
        <th>Movie Name</th>
        </thead>
        <tbody>
        @for (int i = 0; i < Model.Movies.Count(); i++)
        {
            <tr>
                <td>@i</td>
                <td>@Html.ActionLink(Model.Movies.ToArray()[i].Name,"Edit", new {id = Model.Movies.ToArray()[i].Id},null)</td>
            </tr>
        }
        </tbody>
    </table>
}