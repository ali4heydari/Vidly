@model Vidly.ViewModels.MoviesViewModel

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<table id="movies" class="table table-hover table-bordered">
    <thead>

    <tr >
        <th>#</th>
        <th>Movie Name</th>
        <th>Genre</th>
    </tr>
    </thead>
    <tbody>
    </tbody>
</table>


@section scripts
{
    <script>
        $(document).ready(function() {

            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "id",
                        render: function(data) {
                            return data;
                        }
                    },
                    {
                        data: "name",

                    },
                    {
                        data: "genre.name"
                    }
                ]
            });
        });

    </script>
}